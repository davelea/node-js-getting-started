<!DOCTYPE html>
<html lang="en_US">
  <head>
    <title>Referrer Test</title>
    <meta id="myReferrer" name="referrer" content="no-referrer" />

    <script>
      window.history.pushState({}, '', '?hello=world&gtm_debug=1702008688688');

      function handleSelect(event) {
        const tag = document.querySelector('#myReferrer');
        tag.setAttribute('content', event.target.value);
      }
    </script>
  </head>

  <body>
    <div style="margin-bottom: 1rem">
      <a href="https://help.salesforce.com/s/">Navigate to help with selected referrer attribute</a>
    </div>

    <select onchange="handleSelect(event)">
      <option>no-referrer</option>
      <option>no-referrer-when-downgrade</option>
      <option>origin</option>
      <option>origin-when-cross-origin</option>
      <option>same-origin</option>
      <option>strict-origin</option>
      <option>strict-origin-when-cross-origin</option>
      <option>unsafe-url</option>
    </select>
  </body>
</html>
